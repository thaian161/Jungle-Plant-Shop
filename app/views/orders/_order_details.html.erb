
<tr>
  <td> <%= image_tag product.image.tiny.url %> </td>
  <td>
    <h4 style="color: #33582f"><%= product.name %></h4>
    <p><%= product.description %></p>
  </td>
  <td><%= humanized_money_with_symbol product.price %></td>
  <td><%= quantity %></td>
  <td><%= humanized_money_with_symbol product.price * quantity %></td>
</tr>